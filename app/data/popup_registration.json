{
  "popup_registration": {
    "type": "registration",
    "id": "popup_registration",
    "title": "Регистрация",
    "data": {
      "form": {
        "type": "registration",
        "class": "form--popup",
        "input": {
          "id": "auth_code",
          "label": {
            "text": "Введите код из SMS"
          },
          "element": {
            "type": "text",
            "text": "000",
            "name": "code",
            "attrs": "required inputmode='numeric' autocomplete='one-time-code'"
          }
        },
        "checkboxes": {
          "items": [{
            "id": "registration_checkbox",
            "class": "input-check--secondary",
            "label": {
              "text": "Даю согласие на обработку персональных данных"
            },
            "element": {
              "type": "checkbox",
              "name": "personal_data",
              "attrs": "required checked"
            }
          }, {
            "id": "registration_checkbox",
            "class": "input-check--secondary",
            "label": {
              "text": "Даю согласие на получение рекламно-информационных рассылок"
            },
            "element": {
              "type": "checkbox",
              "name": "advert_info_mailings",
              "attrs": "required checked"
            }
          }]
        },
        "submit_btn": {
          "class": "btn--animate btn--tertiary popup__btn",
          "text": {
            "text": "Авторизация"
          },
          "attrs": "type='submit'"
        }
      }
    }
  }
}
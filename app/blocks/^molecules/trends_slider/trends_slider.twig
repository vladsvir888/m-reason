<div class="swiper trends-slider">
  <div class="swiper-wrapper">
    {% for item in trends_slider.items %}
      <div class="swiper-slide">
        {% view "^category_card" with {
          category_card: item
        } %}
      </div>
    {% endfor %}
  </div>
  {% view "@button" with {
    button: {
      class: "swiper-button-prev trends-slider__btn trends-slider__btn--prev",
      icon: {
        class: "trends-slider__btn-icon",
        name: "sprite-mono.svg#arrow-prev"
      },
      attrs: 'aria-label="Назад"'
    }
  } %}
  {% view "@button" with {
    button: {
      class: "swiper-button-next trends-slider__btn trends-slider__btn--next",
      icon: {
        class: "trends-slider__btn-icon",
        name: "sprite-mono.svg#arrow-next"
      },
      attrs: 'aria-label="Вперед"'
    }
  } %}
</div>
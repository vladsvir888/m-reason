<div class="menu-slider">
  <div class="swiper menu-slider__inner slider-with-square-btns">
    <div class="swiper-wrapper">
      {% for item in menu_slider.items %}
        <div class="swiper-slide">
          {% view "^card_text" with {
            card_text: item
          } %}
        </div>
      {% endfor %}
    </div>
    {% view "@button" with {
      button: {
        class: "swiper-button-prev slider-with-square-btns__btn slider-with-square-btns__btn--prev",
        icon: {
          class: "slider-with-square-btns__btn-icon",
          name: "sprite-mono.svg#arrow-prev"
        },
        attrs: 'aria-label="Назад"'
      }
    } %}
    {% view "@button" with {
      button: {
        class: "swiper-button-next slider-with-square-btns__btn slider-with-square-btns__btn--next",
        icon: {
          class: "slider-with-square-btns__btn-icon",
          name: "sprite-mono.svg#arrow-next"
        },
        attrs: 'aria-label="Вперед"'
      }
    } %}
  </div>
  <div class="swiper-scrollbar menu-slider__scrollbar"></div>
</div>
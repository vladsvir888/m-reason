<section class="action {{ action.class }}">
  <div class="container">
    <div class="action__inner">
      {% view "@image" with {
        image: action.image
      } %}

      <div class="action__content">
        {% view "@title" with {
          title: action.content.title
        } %}

        {% if action.content.text %}
          <p class="action__text">
            {{ action.content.text }}
          </p>
        {% endif %}

        <div class="btn btn--animate btn--primary action__btn" aria-hidden="true">
          <span class="btn__text">
            {{ action.content.fake_btn.text }}
          </span>
        </div>
      </div>
    </div>
  </div>
</section>
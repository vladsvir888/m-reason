{% if icon.svg_as_code %}
  {{ icon.svg_as_code }}
{% else %}
  <svg
    {% if icon.sizes.width %}width="{{ icon.sizes.width }}"{% endif %}
    {% if icon.sizes.height %}height="{{ icon.sizes.height }}"{% endif %}
    class="icon {% if icon.class %}{{ icon.class }}{% endif %}"
    {% if icon.attrs %}{{ icon.attrs }}{% endif %}
    aria-hidden="true"
    focusable="false"
  >
    <use href="./assets/sprites/{{ icon.name }}"></use>
  </svg>
{% endif %}
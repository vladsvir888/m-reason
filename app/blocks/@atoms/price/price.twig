<div class="price {{ price.class }}">
  {% if not price.with_discount %}
    <p>
      {{ price.text }}
    </p>
  {% else %}
    <p>
      <span class="price__old">
        {{ price.text }}
      </span>
    </p>
    <p class="price__discount">
      <span>
        {{ price.with_discount.discount }}
      </span>
      <span>
        {{ price.with_discount.text }}
      </span>
    </p>
  {% endif %}
</div>
